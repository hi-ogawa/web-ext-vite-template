{
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "run-p dev:*",
    "dev:vite": "vite --no-clearScreen --port 18181",
    "dev:background": "esbuild ./src/background/index.ts --bundle --format=esm --outdir=./src/dev/dist/background --watch",
    "dev:tsc": "pnpm tsc --watch --preserveWatchOutput",
    "build": "run-s build:*",
    "build:vite": "vite build",
    "build:background": "esbuild ./src/background/index.ts --bundle --format=esm --outdir=./dist/background",
    "build:manifest": "mkdir -p dist/assets && bash misc/copy-manifest.sh > dist/manifest.json && cp -f src/dev/assets/production/*.png dist/assets",
    "build:web-ext": "rm -rf web-ext-artifacts && web-ext build -s dist",
    "preview": "npx web-ext run -s dist -t chromium",
    "preview-dev": "npx web-ext run -s src/dev -t chromium",
    "tsc": "tsc -b",
    "lint": "run-s lint:*",
    "lint-check": "run-s lint-check:*",
    "lint:prettier": "prettier --write --cache .",
    "lint-check:prettier": "prettier --check --cache ."
  },
  "dependencies": {
    "@floating-ui/react-dom-interactions": "^0.13.3",
    "@formatjs/intl": "^2.6.5",
    "@headlessui/react": "^1.7.10",
    "@hiogawa/utils": "^1.0.2",
    "@hiogawa/utils-react": "1.0.0-pre.1",
    "@tanstack/react-query": "^4.24.4",
    "@tanstack/react-query-devtools": "^4.24.4",
    "comlink": "^4.4.1",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "react-remove-scroll": "^2.5.5",
    "superjson": "^1.12.2",
    "webextension-polyfill": "^0.10.0",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@hiogawa/unocss-preset-antd": "^1.4.0",
    "@iconify-json/ri": "^1.1.4",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@tsconfig/strictest": "^1.0.2",
    "@types/lodash": "^4.14.191",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/webextension-polyfill": "^0.10.0",
    "@unocss/reset": "^0.49.4",
    "@vitejs/plugin-react": "^3.1.0",
    "esbuild": "^0.17.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "tsx": "^3.12.2",
    "typescript": "^4.9.4",
    "unocss": "^0.49.4",
    "vite": "^4.1.1",
    "vitest": "^0.28.3",
    "web-ext": "^7.5.0"
  },
  "volta": {
    "node": "18.14.0"
  }
}
